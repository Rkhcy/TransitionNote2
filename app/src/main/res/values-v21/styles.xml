<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- enable window content transitions.  This defaults to true for Material-themed applications -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="PlanetDetailTheme" parent="AppTheme">
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/enter_transform_planet_detail</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
    </style>
</resources>
